<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolApplication"
        xmlns:Entities="clr-namespace:ToolApplication.Domain.Entities;assembly=ToolApplication.Domain" x:Class="ToolApplication.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.DataContext>
            <Entities:DataContext/>
        </Grid.DataContext>
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="303" Margin="10,10,0,0" Stroke="Black" VerticalAlignment="Top" Width="500"/>
        <ListView x:Name="toolListView" HorizontalAlignment="Left" Height="224" Margin="40,53,0,0" VerticalAlignment="Top" Width="157">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Produkt" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Pris" DisplayMemberBinding="{Binding Price}"/>
                    
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="newToolBtn" Content="Lägg till ny vara" HorizontalAlignment="Left" Margin="242,65,0,0" VerticalAlignment="Top" Width="75" Click="newToolBtn_Click"/>
        <Button x:Name="showBtn" Content="Visa" HorizontalAlignment="Left" Margin="242,114,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="deleteBtn" Content="Ta Bort" HorizontalAlignment="Left" Margin="242,90,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
