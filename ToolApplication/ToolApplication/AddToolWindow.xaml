<Window x:Class="ToolApplication.AddToolWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolApplication.Domain.Entities;assembly=ToolApplication.Domain"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="AddToolWindow" Height="343.299" Width="494.845">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="b2v" />
        <ObjectDataProvider x:Key="dataFromEnum" MethodName="GetValues"
                        ObjectType="{x:Type sys:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:Category"/>
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <Grid>
        <RadioButton x:Name="toolRadio" Content="Verktyg" HorizontalAlignment="Left" Margin="38,37,0,0" VerticalAlignment="Top" IsChecked="{Binding Path=CurrentOption, Mode=TwoWay}"/>
        <RadioButton x:Name="batteryRadio" Content="Batteriverktyg" HorizontalAlignment="Left" Margin="103,37,0,0" VerticalAlignment="Top" IsChecked="{Binding Path=CurrentOption, Mode=TwoWay}"/>
        <RadioButton x:Name="powerRadio" Content="Strömverktyg" HorizontalAlignment="Left" Margin="210,40,0,0" VerticalAlignment="Top" IsChecked="{Binding Path=CurrentOption, Mode=TwoWay}"/>
        <GroupBox x:Name="groupBox" Header="GroupBox" HorizontalAlignment="Left" Margin="28,10,0,0" VerticalAlignment="Top" Width="441" Height="22"/>
        <TextBox x:Name="toolWeightTxt" HorizontalAlignment="Left" Height="23" Margin="28,199,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="toolPriceTxt" HorizontalAlignment="Left" Height="23" Margin="28,240,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="inventoryAisleTxt" HorizontalAlignment="Left" Height="23" Margin="165,199,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="inventoryShelfTxt" HorizontalAlignment="Left" Height="23" Margin="165,171,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="toolCordTxt" HorizontalAlignment="Left" Height="23" Margin="329,199,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"
                  Visibility="{Binding IsChecked,ElementName=powerRadio,Converter={StaticResource b2v}}"/>
        <TextBox x:Name="toolNameTxt" HorizontalAlignment="Left" Height="22" Margin="28,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="441"/>
        <TextBox x:Name="toolBattTxt" HorizontalAlignment="Left" Height="23" Margin="315,171,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120"
                 Visibility="{Binding IsChecked,ElementName=batteryRadio,Converter={StaticResource b2v}}"/>
                 
        <Button x:Name="add_btn" Content="Lägg till" HorizontalAlignment="Left" Margin="165,277,0,0" VerticalAlignment="Top" Width="75" Click="add_btn_Click"/>
        <TextBox x:Name="toolDescTxt" HorizontalAlignment="Left" Height="21" Margin="28,136,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="441"/>
        <Label x:Name="label" Content="Produktnamn" HorizontalAlignment="Left" Margin="28,62,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy" Content="Produktbeskrivning" HorizontalAlignment="Left" Margin="28,110,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy1" Content="Pris" HorizontalAlignment="Left" Margin="28,214,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label_Copy2" Content="Vikt" HorizontalAlignment="Left" Margin="27,167,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Batteritid" HorizontalAlignment="Left" Margin="345,171,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Sladdlängd" HorizontalAlignment="Left" Margin="370,240,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label3" Content="Kategori" HorizontalAlignment="Left" Margin="165,222,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="categoryComboBox" HorizontalAlignment="Left" Margin="165,244,0,0" VerticalAlignment="Top" Width="120"
                  ItemsSource="{Binding Source={StaticResource dataFromEnum}}"/>

    </Grid>
</Window>
